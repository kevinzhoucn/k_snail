= form_for @tsg do |f|
  - if @tsg.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tsg.errors.count, "error")} prohibited this tsg from being saved:"
      %ul
        - @tsg.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :department
    = f.text_field :department
  .actions
    = f.submit 'Save'
